@model IEnumerable<CarRentalWeb.ViewModels.CarViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
		<th>
			@Html.DisplayNameFor(model => model.Id)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DailyRentalFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDoors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountriesAllowedIn)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.ImageId)
		</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
		<td>
			@Html.DisplayFor(modelItem => item.Id)
		</td>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DailyRentalFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfDoors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountriesAllowedIn)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.ImageId)
		</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
			@Html.ActionLink("Image", "Image", new { id=item.Id })
        </td>
    </tr>
}

</table>
